<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="14sp"
            android:textColor="#FF757575" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reminder_name"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textSize="14sp"
            android:textColor="#FF757575" />

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days"
            android:textSize="14sp"
            android:textColor="#FF757575"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <ToggleButton
                android:id="@+id/day_mon"
                style="@style/DayToggle"
                android:textOn="@string/mon"
                android:textOff="@string/mon"
                android:layout_marginEnd="4dp" />

            <ToggleButton
                android:id="@+id/day_tue"
                style="@style/DayToggle"
                android:textOn="@string/tue"
                android:textOff="@string/tue"
                android:layout_marginEnd="4dp" />

            <ToggleButton
                android:id="@+id/day_wed"
                style="@style/DayToggle"
                android:textOn="@string/wed"
                android:textOff="@string/wed"
                android:layout_marginEnd="4dp" />

            <ToggleButton
                android:id="@+id/day_thu"
                style="@style/DayToggle"
                android:textOn="@string/thu"
                android:textOff="@string/thu"
                android:layout_marginEnd="4dp" />

            <ToggleButton
                android:id="@+id/day_fri"
                style="@style/DayToggle"
                android:textOn="@string/fri"
                android:textOff="@string/fri"
                android:layout_marginEnd="4dp" />

            <ToggleButton
                android:id="@+id/day_sat"
                style="@style/DayToggle"
                android:textOn="@string/sat"
                android:textOff="@string/sat"
                android:layout_marginEnd="4dp" />

            <ToggleButton
                android:id="@+id/day_sun"
                style="@style/DayToggle"
                android:textOn="@string/sun"
                android:textOff="@string/sun" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="#FFF44336"
                android:background="?android:attr/selectableItemBackground"
                android:visibility="gone"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textColor="#FFFFFFFF"
                android:backgroundTint="#FF4CAF50" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
