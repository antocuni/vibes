<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">#FF4CAF50</item>
        <item name="android:colorPrimaryDark">#FF388E3C</item>
        <item name="android:colorAccent">#FF4CAF50</item>
    </style>

    <style name="DayToggle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/day_toggle_bg</item>
        <item name="android:textColor">@drawable/day_toggle_text</item>
        <item name="android:button">@null</item>
    </style>
</resources>
